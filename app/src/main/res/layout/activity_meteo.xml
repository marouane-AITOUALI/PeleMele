<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MeteoActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="381dp" app:srcCompat="@drawable/loca" android:id="@+id/imageView"
                android:contentDescription="@string/localisation"/>
        <Button
                android:text="meteo"
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content" android:id="@+id/weather"/>
        <TextView
                android:layout_marginTop="35dp"
                android:layout_width="match_parent"
                android:layout_height="199dp" android:id="@+id/textView"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>