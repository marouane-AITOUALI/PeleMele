<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LongActivity" android:backgroundTint="#9C27B0" android:foregroundTint="#FFFFFF">

    <Button
            android:text="longueActivite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/StartLongActivity"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="341dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="158dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="158dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="341dp" android:background="#E91E63" android:backgroundTint="#F40303"
            android:textColor="#000000"/>
    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/pb" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="158dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="500dp" android:progressBackgroundTint="#A31B1B" android:background="#6A6A6A"
            android:visibility="invisible"/>
    <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:id="@+id/progressBar"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toBottomOf="@+id/pb"
            android:progressTint="#6CD8E6" android:max="100" android:visibility="invisible"
            android:foregroundTint="#F44336"/>
</androidx.constraintlayout.widget.ConstraintLayout>